generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int      @id @default(autoincrement())
  pageKey     String
  title       String
  category    String
  age         String
  description String
  features    String
  themeKey    String
  popular     Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model GalleryItem {
  id        Int      @id @default(autoincrement())
  pageKey   String
  category  String
  type      String
  src       String
  title     String
  location  String
  createdAt DateTime @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  pageKey   String
  name      String
  role      String
  content   String
  rating    Int
  date      String
  createdAt DateTime @default(now())
}

model SuccessStory {
  id             Int      @id @default(autoincrement())
  pageKey        String
  name           String
  role           String
  image          String
  videoThumbnail String
  quote          String
  story          String
  stats          String
  createdAt      DateTime @default(now())
}
